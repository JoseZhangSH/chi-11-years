abstract = {Project Jacquard presents manufacturing technologies that enable deploying invisible
ubiquitous interactivity at scale. We propose novel interactive textile materials
that can be manufactured inexpensively using existing textile weaving technology and
equipment.The development of touch-sensitive textiles begins with the design and engineering
of a new highly conductive yarn. The yarns and textiles can be produced by standard
textile manufacturing processes and can be dyed to any color, made with a number of
materials, and designed to a variety of thicknesses and textures to be consistent
with garment designers' needs.We describe the development of yarn, textiles, garments,
and user interactivity; we present the opportunities and challenges of creating a
manufacturable interactive textile for wearable computing.},
booktitle = {Proceedings of the 2016 CHI Conference on Human Factors in Computing Systems},
pages = {4216–4227},
