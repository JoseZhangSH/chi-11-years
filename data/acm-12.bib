abstract = {Observational studies of situated displays have suggested that they are rarely looked
at, and when they are it is typically only for a short period of time. Using a mobile
eye tracker during a realistic shopping task in a shopping center, we show that people
look at displays more than would be predicted from these observational studies, but
still only short glances and often from quite far away. We characterize the patterns
of eye-movements that precede looking at a display and discuss some of the design
implications for the design of situated display technologies that are deployed in
public space.},
booktitle = {Proceedings of the 33rd Annual ACM Conference on Human Factors in Computing Systems},
pages = {3889–3898},
numpages = {10},
