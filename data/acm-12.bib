@inproceedings{10.1145/2702123.2702254,
author = {Schmidt, Dominik and Frohnhofen, Johannes and Knebel, Sven and Meinel, Florian and Perchyk, Mariya and Risch, Julian and Striebel, Jonathan and Wachtel, Julia and Baudisch, Patrick},
title = {Ergonomic Interaction for Touch Floors},
year = {2015},
isbn = {9781450331456},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/2702123.2702254},
doi = {10.1145/2702123.2702254},
abstract = {The main appeal of touch floors is that they are the only direct touch form factor
that scales to arbitrary size, therefore allowing direct touch to scale to very large
numbers of display objects. In this paper, however, we argue that the price for this
benefit is bad physical ergonomics: prolonged standing, especially in combination
with looking down, quickly causes fatigue and repetitive strain. We propose addressing
this issue by allowing users to operate touch floors in any pose they like, including
sitting and lying. To allow users to transition between poses seamlessly, we present
a simple pose-aware view manager that supports users by adjusting the entire view
to the new pose. We support the main assumption behind the work with a simple study
that shows that several poses are indeed more ergonomic for touch floor interaction
than standing. We ground the design of our view manager by analyzing, which screen
regions users can see and touch in each of the respective poses.},
booktitle = {Proceedings of the 33rd Annual ACM Conference on Human Factors in Computing Systems},
pages = {3879–3888},
numpages = {10},
keywords = {gui, ubicomp, interactive floor, ergonomics, multi-touch, smart rooms},
location = {Seoul, Republic of Korea},
series = {CHI '15}
}

@inproceedings{10.1145/2702123.2702150,
author = {Dalton, Nicholas S. and Collins, Emily and Marshall, Paul},
title = {Display Blindness? Looking Again at the Visibility of Situated Displays Using Eye-Tracking},
