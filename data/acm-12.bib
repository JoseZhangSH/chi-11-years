@inproceedings{10.1145/2702123.2702294,
author = {Palen, Leysia and Soden, Robert and Anderson, T. Jennings and Barrenechea, Mario},
title = {Success &amp; Scale in a Data-Producing Organization: The Socio-Technical Evolution of OpenStreetMap in Response to Humanitarian Events},
year = {2015},
isbn = {9781450331456},
publisher = {Association for Computing Machinery},
