@inproceedings{10.1145/2702123.2702512,
author = {Konrad, Artie and Bellotti, Victoria and Crenshaw, Nicole and Tucker, Simon and Nelson, Les and Du, Honglu and Pirolli, Peter and Whittaker, Steve},
title = {Finding the Adaptive Sweet Spot: Balancing Compliance and Achievement in Automated Stress Reduction},
