@inproceedings{10.1145/2470654.2481364,
author = {Bardram, Jakob E. and Frost, Mads and Sz\'{a}nt\'{o}, K\'{a}roly and Faurholt-Jepsen, Maria and Vinberg, Maj and Kessing, Lars Vedel},
