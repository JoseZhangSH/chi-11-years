}

@inproceedings{10.1145/2470654.2481376,
author = {Goyal, Nitesh and Leshed, Gilly and Fussell, Susan R.},
title = {Effects of Visualization and Note-Taking on Sensemaking and Analysis},
year = {2013},
isbn = {9781450318990},
